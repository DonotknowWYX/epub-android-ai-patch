<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".server.ServerActivity">
    <ToggleButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/btn_startstop"
        android:elevation="3dp"
        android:id="@+id/btnToggle"
        android:textOff="@null"
        android:textOn="@null"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:id="@+id/txtIps"
        android:layout_gravity="center_horizontal|bottom"
        android:fontFamily="monospace"
        android:background="@drawable/bg_text"
        android:textColor="#000"
        android:padding="10dp"
        android:text="服务器已停止"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/txtStatistic"
        android:gravity="center"/>

    <View
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleX="0"
        android:scaleY="0"
        android:id="@+id/cirInner"
        android:background="@drawable/bg_dash"
        android:layout_gravity="center"/>
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/cirOuter"
        android:scaleX="0"
        android:scaleY="0"
        android:background="@drawable/bg_dash"
        android:layout_gravity="center"/>
</FrameLayout>